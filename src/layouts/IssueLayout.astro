---
import { getCollection } from "astro:content";
import "./issue.css";

const posts = await getCollection("newsletter");
const sortedPosts = posts.sort(
  (a, b) => new Date(b.data.date).valueOf() - new Date(a.data.date).valueOf()
);

const { number } = Astro.props.content;

const prevURL = number - 1 <= 0 ? undefined : `/newsletter/${number - 1}`;
const nextURL =
  number >= sortedPosts.length ? undefined : `/newsletter/${number + 1}`;
---

<div class="flex my-0 gap-1">
  <div class="my-0 flex flex-col gap-5">
    <header class="w-full"></header>

    <section
      class="prose mx-auto dark:prose-invert h-full hover:prose-h2:underline prose-h2:font-title"
    >
      <slot />
      <div class="prose flex gap-3 pt-8">
        {
          prevURL && (
            <a
              href={prevURL}
              class="m-0 flex flex-1 grow flex-col rounded-lg border border-gray-400 border-opacity-0 bg-gray-300/20 p-4 text-left text-sm no-underline transition-colors hover:border-opacity-100 dark:bg-gray-800/70"
            >
              <p class="m-0 mb-1 text-zinc-700 dark:text-zinc-400">
                ← Previous issue
              </p>
              <p class="m-0 font-semibold text-zinc-500 dark:text-zinc-300">
                Issue #{number - 1}
              </p>
            </a>
          )
        }

        {
          nextURL && (
            <a
              href={nextURL}
              class="m-0 flex flex-1 grow flex-col rounded-lg border border-gray-400 border-opacity-0 bg-gray-300/20 p-4 text-right text-sm no-underline transition-colors hover:border-opacity-100 dark:bg-gray-800/70"
            >
              <p class="m-0 mb-1 text-zinc-700 dark:text-zinc-400">
                Next issue →
              </p>
              <p class="m-0 font-semibold text-zinc-500 dark:text-zinc-300">
                Issue #{number + 1}
              </p>
            </a>
          )
        }
      </div>
    </section>
  </div>
</div>
