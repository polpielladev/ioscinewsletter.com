---
import Hero from "@components/Hero.astro";
import NewsletterSponsorSlot from "@components/issue/NewsletterSponsorSlot.astro";
import BaseLayout from "@layouts/BaseLayout.astro";
import Highlight from "@components/sponsor/Highlight.astro";
import StatsSection from "@components/sponsor/StatsSection.astro";
import ListItem from "@components/sponsor/ListItem.astro";
---

<BaseLayout
  title="Sponsor"
  description="Help me continue to create content and open source projects by sponsoring me."
  activeNav="sponsor"
  image=""
>
  <Hero
    title="Want your product to reach thousands of developers?"
    body="You can sponsor my newsletter and help me with my mission to continue creating content online as well as showcasing your product to iOS developers."
  >
    <a
      href="mailto:hi@polpiella.dev?subject=I would like to sponsor polpiella.dev"
      class="inline-flex items-center py-3 px-5 text-base font-medium text-center text-white rounded-lg bg-violet-700 hover:bg-violet-800 focus:ring-4 focus:ring-violet-900 transition-colors"
    >
      Book a slot for 2024
      <svg
        class="w-3.5 h-3.5 ml-2"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"></path>
      </svg>
    </a>
  </Hero>
  <section class="flex flex-col gap-9 mt-16">
    <StatsSection title="How much does it cost?">
      <ul class="list-disc list-inside space-y-4">
        <ListItem>
          Sponsored slot in 1 issue: <Highlight text="750 €" />.
        </ListItem>
        <ListItem>
          Pack of 4 sponsored slots: <Highlight text="2750 €" />, saving a whole <Highlight
            text="250 €"
          />!
        </ListItem>
      </ul>
    </StatsSection>

    <StatsSection title="What's in it for you?">
      <ul
        class="text-lg font-normal lg:text-xl text-gray-300 flex flex-col gap-3 list-disc list-inside"
      >
        <ListItem>
          A sponsored slot in 100+ blog posts across the whole site.
        </ListItem>
        <ListItem>
          A <strong>tweet</strong> with a shoutout to your account announcing the
          sponsorship.
        </ListItem>
        <ListItem>
          A <strong>LinkedIn post</strong> with a shoutout to your account announcing
          the sponsorship.
        </ListItem>
        <ListItem>
          A permanent place in the <strong>trusted by</strong> section of this page
          alongside all past sponsors.
        </ListItem>
      </ul>
    </StatsSection>

    <StatsSection title="What do sponsored slots look like?">
      <NewsletterSponsorSlot />
      <a
        href="/core-data-migration-app-group"
        class="text-lg underline font-normal lg:text-xl text-violet-300"
        >You can see it in context in any of the site's articles.</a
      >
    </StatsSection>
    <StatsSection title="Some stats about the newsletter">
      <ul
        class="text-lg font-normal lg:text-xl text-gray-300 flex flex-col gap-3 list-disc list-inside"
      >
        <ListItem><Highlight text="1k+" /> email subscribers.</ListItem>
        <ListItem><Highlight text="30+" /> issues released so far.</ListItem>
        <ListItem><Highlight text="74%" /> average open rate.</ListItem>
      </ul>
    </StatsSection>
  </section>
</BaseLayout>
